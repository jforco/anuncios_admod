<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:layout_margin="30dp"
        android:gravity="center|center_horizontal">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gana Crédito con anuncios! (Bolivia)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textStyle="bold" android:textAlignment="center" android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp" android:layout_marginBottom="15dp"/>
    <TextView
            android:text="Solo debes ver los anuncios dandole click al boton y esperando que termine. Cuando acabe, se te entregará 10 monedas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_margin="15dp"/>
    <TextView
            android:text="Junta 1000 monedas y canjealas por 5 bs de crédito!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_margin="15dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_margin="15dp">
        <TextView
                android:text="Monedas: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
        />
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" tools:srcCompat="@drawable/moneda" android:id="@+id/imageView"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cant_monedas" android:layout_weight="1"
        />
    </LinearLayout>
    <Button
            android:text="@string/ver_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="425dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/button_publicidad" android:layout_margin="15dp"
            android:background="@color/colorPrimaryDark" android:textColor="@android:color/white"
            android:padding="10dp"/>
    <Button
            android:text="Canjear Monedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_margin="15dp" android:id="@+id/button_canjear"
            android:background="@color/colorPrimaryDark" android:textColor="@android:color/white"
            android:padding="10dp"/>

</LinearLayout>